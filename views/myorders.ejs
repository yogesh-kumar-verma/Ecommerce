<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/eeb8707309.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <title>My Cart</title>
  </head>

  <body>
    <%- include('partials/header', {name: name ,isSeller:isSeller}); %>
    <br />
    <br />
    
    <div class="d-flex flex-row row" id="maincon">
      <% if(placeorder){ placeorder.forEach((order)=>{
      order.cartitems.forEach((cartitem)=>{
      %> 
        <div class="col-sm-3 col-12">

            <div class="card shadow  py-2 px-1" style="width: 20rem" ">
                <img
                class="card-img-top img-fluid"
                src="<%=cartitem.item.images %>"
                alt="Card image cap"
                
                />
                
                <div class="card-body">
                    <h5 class="card-title">Name:-<%=cartitem.item.name %></h5>
                    <h5 class="card-title">Address:-<%=order.address %></h5>
                    <h5 class="card-title">Quantity:-<%=cartitem.quantity%></h5>
                    <h5 class="card-title">Price:-<%=cartitem.item.price%></h5>
                    <h5 class="card-title">Total:-<%=cartitem.quantity * cartitem.item.price %></h5>
                     <a class="btn btn-lg btn-danger"href="cancel/<%=order._id%>/<%=cartitem.item._id%>" >CancelOrder</a >
                      <a class="btn btn-lg btn-warning mt-2"   href="cancel/<%=order._id%>/<%=cartitem.item._id%>" >Confirm Delivery</a >
                </div>
            </div>
            
        </div>
            <% })}) } %>
    </div>
    <script>
        if (document.getElementById("maincon").innerText.length < 1) {
        document.getElementById("maincon").innerHTML =
          " <br><br><br><h1> Oops its seems you haven't ordered anything ðŸ˜Š</h1>";
      }
    </script>
  </body>
</html>
