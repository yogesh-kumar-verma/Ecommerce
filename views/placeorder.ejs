    ></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <title>My Cart</title>
  </head>

  <body>
    <% var grandtotal=0%> <%- include('partials/header', {name: name
    ,isSeller:isSeller}); %>
    <br />
    <br />
    <div id="maincontainer">
      <div style="z-index: 1">
        <% cart.forEach((cartitem)=>{ %>
        <div
          style="background-color: rgb(231, 231, 231); width: 100%"
          class="py-2 px-2 mx-3 my-3 rounded shadows"
        >
          <div class="card" style="width: 100%">
            <div class="row">
              <div class="col-sm-4 col-12">
                <img
                  class="img-fluid"
                  src=" <%=cartitem.item.images[0]%>"
                  alt="Card image cap"
                  style="max-height: 300px"
                />
              </div>
              <div class="col-sm-8 col-12 d-flex align-items-center">
                <div class="card-body">
                  <h5 class="card-title">Name: <%=cartitem.item.name %></h5>
                  <h5 class="card-title">
                    Description:<%=cartitem.item.desc %>
                  </h5>
                  <h5 class="card-title">Price:<%=cartitem.item.price %></h5>
                  <h5 class="card-title">Quantity:<%=cartitem.quantity%></h5>
                  <h5 class="card-title">
                    Total:<%= cartitem.quantity*cartitem.item.price%>
                  </h5>
                  <%grandtotal=grandtotal+cartitem.quantity*cartitem.item.price%>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% })%>
      </div>
      <div
        class="d-flex justify-content-center align-items-center"
        style="
          position: fixed;
          bottom: 2rem;
          width: 100%;
          z-index: 2;
          background-color: rgb(123, 173, 219);
        "
      >
        <label for="address"><h3>Delivery Address:</h3> </label>
        <input
          name="address"
          id="address"
          type="text"
          class="py-2 form-control"
          placeholder="building no.,street no , area,city ,"
        />

        <br />
        <button
          class="btn btn-primary mx-4 py-2"
          onclick="placeorder(`<%=grandtotal%>`)"
        >
          Pay the bill
        </button>
      </div>
      <div style="position: fixed; right: 3rem; bottom: 9rem; z-index: 3">
        <h3>Grand Total:<%=grandtotal%></h3>
      </div>
    </div>
    <script>
      function placeorder(total) {
        // console.log(total);
        let address = document.getElementById("address").value;
        // console.log(address);
        if (!address) {
          alert("please enter a valid address");
        } else {
          document.getElementById("maincontainer").innerHTML =
            "<h1>Thank You For Purchasing </h1>";
          fetch(`placeorder/${total}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ address: address }),
          }).then(res);
        }
      }
    </script>
  </body>
</html>
